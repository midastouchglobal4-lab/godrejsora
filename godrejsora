  <script>
    // Basic lead form handler (no backend). Sends an email draft and shows a toast.
    function handleForm(formId, noteId){
      const f = document.getElementById(formId);
      const note = document.getElementById(noteId);
      f.addEventListener('submit', (e)=>{
        e.preventDefault();
        const data = new FormData(f);
        const name = data.get('name') || '';
        const phone = data.get('phone') || '';
        const email = data.get('email') || '';
        const message = (data.get('message') || '').replace(/\n/g, '%0D%0A');
        const subject = encodeURIComponent('Enquiry: Godrej SORA');
        const body = encodeURIComponent(`Name: ${name}\nPhone: ${phone}\nEmail: ${email}\nMessage: ${data.get('message')||''}`);
        note.textContent = 'Thank you! We\'ll reach out shortly.';
     
        f.reset();
      });
    }
    handleForm('leadForm','formNote');
    handleForm('leadForm2','formNote2');
  </script>

